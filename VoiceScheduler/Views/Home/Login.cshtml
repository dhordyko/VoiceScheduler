@model VoiceScheduler.Models.Login





@using (Html.BeginForm("CheckUser", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "LoginForm" }))
{
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div id="Login" class="modal fade" role="dialog">
        <div><label style="color:red; font-weight:400; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Powiedz "Łogowanie" -> "Imię" -> "Hasło", żeby wprowadzić tekst przez  dyktowanie </label></div>
        <div><label style="color:red; font-weight:400; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Dla włączenia serwisu rozpoznawania mowy , musisz kliknąć na dowolny obszar okna. </label></div>
        <div><label style="color:red; font-weight:400; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif">Logowanie do systemu. Komendy głosowe:"użytkownik", "kalendar"</label></div>
        <div class="modal-dialog ">
            <div class="modal-content">
                <div class="modal-header"  data-toggle="popover" data-content="Tryb rozpoznawania mowy jest włączony">
                    
                    <h1 class="modal-title">Łogowanie<span id="eventTitle"></span></h1>
                </div>
                <div class="modal-body" style="padding-right:80px;padding-left:40px">
                    <form class="form-horizontal">
                        <input type="hidden" id="hdEventId" value="0" />


                        <div class="form-group" style="text-align:center">

                            @Html.LabelFor(m => m.login)

                            @Html.TextBoxFor(m => m.login, new { @class = "form-control", @id = "userid", @type = "text", @style = "width:350px; margin-top:15px; font-family:Arial, FontAwesome !important" })
                            @Html.ValidationMessageFor(m => m.login, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group" style="text-align:center">
                            @Html.LabelFor(m => m.Password)


                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "password", @type = "text", @style = "width:350px; font-family:Arial, FontAwesome !important" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                        </div>
                        @Html.DisplayFor(m => m.LoginErrorMessage, new { @class = "text-danger" })

                        <div style="margin:30px; align-content:center">
                            
                            <button type="submit" onclick="Submit()" id="LoginUser" class=" btn-login btn btn-success " data-toggle="popover" data-content="Poweidz załoguj, żeby się załogować">Załoguj</button>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>

}

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script>

    function Submit() {

        $("#LoginUser").click(function () {

            $("#LoginForm").submit();
        });

    }



</script>